@using System.Collections
@using System.Dynamic
@using Newtonsoft.Json
@using RealWorldRest.Modules
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>RealWorldRest</title>

    <style type="text/css">
    </style>
    <script type="text/javascript">
        var model = @Html.Raw(JsonConvert.SerializeObject(Model));
    </script>
</head>
<body>
    <img src="~/Content/nancy-logo.png" alt="Nancy logo" style="margin: 16px auto;" /><br />
    <a href="/browser/browser.html">HAL Browser</a>
    <ul>
        <script type="text/javascript">
            for (var link in model._links) {
                document.write('<li><a href="' + model._links[link].href + '">' + model._links[link].title + '</a></li>');
            }
        </script>
    </ul>
</body>
</html>
